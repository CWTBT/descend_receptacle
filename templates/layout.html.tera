<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <div class="container">
      <h3>Please select a file</h3>
      <form method="post" action="/" enctype="multipart/form-data">
        <input name="file" type="file">
        <button type="submit">Upload</button>
      </form>
    </div>

    <div class="output">
      <p> {{file_contents}} </p>
    </div>

    <div class="file_table">
      <table>
        {% for thing in folder_contents %}
          <tr>
            <td>{{thing}}</td>

            <form method="get" action="/download">
              <td><input type="hidden" name="dl_target" value={{thing}}></td>
              <td><button type="submit" id="download_button" </button>Download</td>
            </form>

            <form method="get" action="/delete">
              <td><input type="hidden" name="del_target" value={{thing}}></td>
              <td><button type="submit" id="delete_button" </button>Delete</td>
            </form>

          </tr>
        {% endfor %}
      </table>
    </div>

  </body>
</html>
